<div>
  <!-- Search bar start -->
  <%= form_tag capsules_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Browse capsules"
    %>
    <%= submit_tag "Go", class: "btn btn-primary" %>
  <% end %>
  <!-- Search bar end -->
</div>

<main>
    <% @capsules.each do |capsule| %>
      <div class="image">
        <% if capsule.photos[0] %>
          <%= cl_image_tag capsule.photos[0].key, class: "home-card-img"%>
        <% else %>
          <%= image_tag "capsules_default_display.jpg", class: "home-card-img" %>
        <% end %>
        <div class="details">
          <h2><%= capsule.name %></h2>
          <p><%= capsule.description %></p>
          <div class="more">
            <%= link_to 'booknow', capsule_path(capsule), class: "read-more" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</main>
