<header>
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "ccp_logo_project.png", class: "logo" %>
    <h2>CCNP</h2>
  <% end %>
    <ul class="navbar-links">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link" %>
